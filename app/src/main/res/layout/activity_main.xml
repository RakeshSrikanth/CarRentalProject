<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rockooapps.carrentals.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DashBoard!!"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered Users"
        android:id="@+id/RegisteredusersButton"
        android:background="@drawable/shadow"
        android:textColor="@color/Orange"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AddCars"
        android:id="@+id/AddCarsButton"
        android:background="@drawable/shadow"
        android:textColor="@color/Orange"
        android:layout_alignTop="@+id/RegisteredusersButton"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarsList"
        android:layout_below="@+id/textView10"
        android:layout_toStartOf="@+id/AddCarsButton"
        android:layout_above="@+id/RegisteredusersButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
